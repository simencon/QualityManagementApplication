<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="department"
            type="com.simenko.qmapp.domain.DomainDepartmentComplete" />

        <variable
            name="departmentCallback"
            type="com.simenko.qmapp.fragments.DepartmentClick" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:id="@+id/item_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:hint="depAbbr"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.departments.depAbbr}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/order_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_order_type"
                android:ellipsize="end"
                android:hint="depName"
                android:maxLines="1"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.departments.depName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/text_ordered_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_reason"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_order_date"
                android:hint="depOrganization"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.departments.depOrganization}" />

            <TextView
                android:id="@+id/text_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_reason"
                android:layout_toStartOf="@id/text_order_number"
                android:hint="depManager"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.depManagerDetails.get(0).fullName}" />

            <TextView
                android:id="@+id/text_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_reason"
                android:layout_alignEnd="@id/text_order_type"
                android:hint="Company name"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.companies.get(0).companyName}" />

            <View
                android:id="@+id/clickableOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/text_ordered_by"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> departmentCallback.onClick(department, position)}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expanded_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/clickableOverlay"
                android:layout_margin="6dp"
                android:visibility="@{department.departmentDetailsVisibility?View.VISIBLE:View.GONE}">

                <TextView
                    android:id="@+id/item_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_variant_color"
                    android:text="First implementation of the expanded layout."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>