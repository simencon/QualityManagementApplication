<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.simenko.qmapp.utils.StringUtils"/>

        <variable
            name="order"
            type="com.simenko.qmapp.room_entities.DatabaseCompleteOrder" />

        <variable
            name="orderCallback"
            type="com.simenko.qmapp.fragments.OrderClick" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:hint="Order type"
                android:padding="@dimen/padding_insight_item"
                android:text="@{order.orderType.typeDescription}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/order_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_order_type"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:hint="Order reason"
                android:maxLines="1"
                android:padding="@dimen/padding_insight_item"
                android:text="@{order.orderReason.reasonDescription}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/text_ordered_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_reason"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_order_number"
                android:hint="Ordered by"
                android:padding="@dimen/padding_insight_item"
                android:text="@{order.orderPlacer.fullName}" />

            <TextView
                android:id="@+id/text_sub_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_ordered_by"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_order_number"
                android:hint="Sub_order_number"
                android:padding="@dimen/padding_insight_item"
                android:text="@{Integer.toString(order.subOrders.get(0).subOrderNumber)}" />

            <TextView
                android:id="@+id/text_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_reason"
                android:layout_alignParentEnd="true"
                android:hint="member ID"
                android:padding="@dimen/padding_insight_item"
                android:text="@{Integer.toString(order.order.orderNumber)}" />

            <View
                android:id="@+id/clickableOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/text_sub_order_number"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> orderCallback.onClick(order)}" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>