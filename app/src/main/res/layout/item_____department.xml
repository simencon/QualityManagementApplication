<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="department"
            type="com.simenko.qmapp.room.DatabaseDepartmentsDetailed" />

        <variable
            name="departmentCallback"
            type="com.simenko.qmapp.fragments.DepartmentClick" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:hint="depAbbr"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.departments.depAbbr}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_full_name"
                android:ellipsize="end"
                android:hint="depName"
                android:maxLines="1"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.departments.depName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/text_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_email"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_job_role"
                android:hint="depOrganization"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.departments.depOrganization}" />

            <TextView
                android:id="@+id/text_job_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_email"
                android:layout_toStartOf="@id/text_id"
                android:hint="depManager"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.depManagerDetails.get(0).fullName}" />

            <TextView
                android:id="@+id/text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_email"
                android:layout_alignEnd="@id/text_full_name"
                android:hint="Company name"
                android:padding="@dimen/padding_insight_item"
                android:text="@{department.companies.get(0).companyName}" />

            <View
                android:id="@+id/clickableOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/text_department"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> departmentCallback.onClick(department)}" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>