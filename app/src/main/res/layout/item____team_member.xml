<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.simenko.qmapp.utils.StringUtils"/>

        <variable
            name="teamMember"
            type="com.simenko.qmapp.domain.DomainTeamMember" />

        <variable
            name="teamMemberCallback"
            type="com.simenko.qmapp.fragments.TeamMemberClick" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:hint="Full name"
                android:padding="@dimen/padding_insight_item"
                android:text="@{teamMember.fullName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/order_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_order_type"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="@dimen/padding_insight_item"
                android:text="@{StringUtils.getMail(teamMember.email)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/text_ordered_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_reason"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_order_number"
                android:hint="Department"
                android:padding="@dimen/padding_insight_item"
                android:text="@{teamMember.department}" />

            <TextView
                android:id="@+id/text_sub_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_ordered_by"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_order_number"
                android:hint="Job role"
                android:padding="@dimen/padding_insight_item"
                android:text="@{teamMember.jobRole}" />

            <TextView
                android:id="@+id/text_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_reason"
                android:layout_alignParentEnd="true"
                android:hint="member ID"
                android:padding="@dimen/padding_insight_item"
                android:text="@{Integer.toString(teamMember.id)}" />

            <View
                android:id="@+id/clickableOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/text_sub_order_number"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> teamMemberCallback.onClick(teamMember)}" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>