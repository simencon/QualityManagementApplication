<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QMApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/thread_detailed_btn_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.QMApp.NoActionBar" parent="Theme.QMApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MySelectableItemTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="selectableItemBackgroundSelected">
        <item name="android:theme">@style/MySelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="order_title_text_font" parent="@android:style/TextAppearance.Medium">


        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:padding">8dp</item>

        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>

        <item name="android:background">@color/primary_variant_color</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColorHint">@color/thread_detailed_btn_color</item>

    </style>


    <style name="step_layout_style" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="step_text_font" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_order_step</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="spinner_layout_style" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary_color</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="spinner_title_text_font" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="spinner_text_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">8dp</item>

        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>

        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>

        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_text_color</item>

        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>

    </style>

</resources>